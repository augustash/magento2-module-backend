<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="legal.copyright" remove="true" />

        <referenceContainer name="legal.system" htmlClass="footer-legal-system col-m-12">
            <referenceBlock name="privacyPolicy" remove="true" />
            <referenceBlock name="report" remove="true" />
            <referenceBlock name="version">
                <action method="setTemplate">
                    <argument name="template" xsi:type="string">Augustash_Backend::page/footer.phtml</argument>
                </action>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
